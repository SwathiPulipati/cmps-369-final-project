        style.
            #map-container {
                position:relative; 
                height:600px; 
                margin-bottom:5rem; 
            }
            #map { 
                position: absolute; 
                top: 0; 
                bottom: 0; 
                width: 100%;
            }
            .list-group-item {
                cursor: pointer;
            }
    body
        if !hide_login
            if user 
                .navbar.bg-primary
                    span(style='color:white').mx-2 #{user.first_name} #{user.last_name} 
                    a(href='/logout').btn.btn-sm.btn-outline-light.mx-2 Logout
            else
                .navbar.bg-primary.justify-content-end
                    a(href='/login').btn.btn-sm.btn-outline-light Sign in
                    a(href='/signup').btn.btn-sm.btn-outline-light.mx-2 Sign up
        .container           
            block content